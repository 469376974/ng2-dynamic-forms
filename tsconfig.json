{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "core-js",
      "hammerjs",
      "jasmine",
      "node"
    ]
  },
  "exclude": [
    "@ng2-dynamic-forms",
    "modules",
    "node_modules"
  ]
}